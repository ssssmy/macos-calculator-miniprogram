<view class="container">
  <!-- 显示屏 -->
  <view class="display">
    <view class="display-expression">{{expression}}</view>
    <view class="display-result {{resultFontClass}}">{{result}}</view>
  </view>

  <!-- 按钮区域 -->
  <view class="buttons-grid">
    <view class="btn btn-function" bindtap="handleButtonTap" data-value="C">C</view>
    <view class="btn btn-function" bindtap="handleButtonTap" data-value="±">±</view>
    <view class="btn btn-function" bindtap="handleButtonTap" data-value="%">%</view>
    <view class="btn btn-operator {{activeOperator === '÷' ? 'active' : ''}}" bindtap="handleButtonTap" data-value="÷">÷</view>

    <view class="btn btn-number" bindtap="handleButtonTap" data-value="7">7</view>
    <view class="btn btn-number" bindtap="handleButtonTap" data-value="8">8</view>
    <view class="btn btn-number" bindtap="handleButtonTap" data-value="9">9</view>
    <view class="btn btn-operator {{activeOperator === '×' ? 'active' : ''}}" bindtap="handleButtonTap" data-value="×">×</view>

    <view class="btn btn-number" bindtap="handleButtonTap" data-value="4">4</view>
    <view class="btn btn-number" bindtap="handleButtonTap" data-value="5">5</view>
    <view class="btn btn-number" bindtap="handleButtonTap" data-value="6">6</view>
    <view class="btn btn-operator {{activeOperator === '-' ? 'active' : ''}}" bindtap="handleButtonTap" data-value="-">-</view>

    <view class="btn btn-number" bindtap="handleButtonTap" data-value="1">1</view>
    <view class="btn btn-number" bindtap="handleButtonTap" data-value="2">2</view>
    <view class="btn btn-number" bindtap="handleButtonTap" data-value="3">3</view>
    <view class="btn btn-operator {{activeOperator === '+' ? 'active' : ''}}" bindtap="handleButtonTap" data-value="+">+</view>

    <view class="btn btn-number btn-zero" bindtap="handleButtonTap" data-value="0">0</view>
    <view class="btn btn-number" bindtap="handleButtonTap" data-value=".">.</view>
    <view class="btn btn-equals" bindtap="handleButtonTap" data-value="=">=</view>
  </view>
</view>
