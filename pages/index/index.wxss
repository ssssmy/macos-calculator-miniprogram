/* 显示屏区域 */
.display {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 32rpx;
  padding: 30rpx 36rpx;
  margin-bottom: 24rpx;
  text-align: right;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.display-expression {
  color: rgba(255, 255, 255, 0.7);
  font-size: 32rpx;
  height: 44rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.display-result {
  color: #FFFFFF;
  font-size: 88rpx;
  font-weight: 300;
  line-height: 1.1;
  letter-spacing: -2rpx;
  word-break: break-all;
}

.display-result.result-md {
  font-size: 72rpx;
}

.display-result.result-sm {
  font-size: 56rpx;
}

.display-result.result-xs {
  font-size: 44rpx;
}

/* 按钮网格 */
.buttons-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  padding-bottom: 20rpx;
}

/* 按钮基础样式 */
.btn {
  height: 120rpx;
  border-radius: 28rpx;
  font-size: 48rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn:active {
  opacity: 0.7;
}

/* 数字按钮 */
.btn-number {
  background: rgba(255, 255, 255, 0.08);
  color: #FFFFFF;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

/* 功能按钮 (C, ±, %) */
.btn-function {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
}

/* 操作符按钮 (÷, ×, -, +) */
.btn-operator {
  background: #FF9500;
  color: #FFFFFF;
  border: 2rpx solid rgba(255, 149, 0, 0.3);
}

.btn-operator.active {
  background: #FFFFFF;
  color: #FF9500;
}

/* 等号按钮 */
.btn-equals {
  background: #007AFF;
  color: #FFFFFF;
  border: 2rpx solid rgba(0, 122, 255, 0.3);
}

/* 零按钮 - 跨两列 */
.btn-zero {
  grid-column: span 2;
}
