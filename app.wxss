/* 全局样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 容器样式 */
.container {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 40rpx;
}

/* 标题样式 */
.title {
  text-align: center;
  color: white;
  margin-bottom: 60rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.title h1 {
  font-size: 64rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.title p {
  font-size: 32rpx;
  opacity: 0.9;
}

/* 通用按钮样式 */
.btn {
  border: none;
  border-radius: 40rpx;
  font-size: 56rpx;
  font-weight: 400;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  user-select: none;
  position: relative;
  overflow: hidden;
}

.btn:active {
  transform: scale(0.98);
}

/* 状态栏样式 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 40rpx;
}

.time {
  font-weight: 500;
}

.battery {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.battery-icon {
  width: 50rpx;
  height: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 4rpx;
  position: relative;
}

.battery-icon::after {
  content: '';
  position: absolute;
  right: -6rpx;
  top: 6rpx;
  width: 4rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 2rpx;
}

.battery-level {
  width: 70%;
  height: 100%;
  background: #34C759;
  border-radius: 2rpx;
}